<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.StoryActivity" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/navbar"
        android:layout_width="728dp"
        android:layout_height="40dp"
        android:background="@color/navbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/arsenio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Arsenio"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/arsenio_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="31dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/gold"
        app:layout_constraintEnd_toStartOf="@+id/jumlah_gold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jumlah_gold"
        android:layout_width="37dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arsenio_logo"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="12dp"
        android:text="STORY MODE"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toEndOf="@+id/arsenio_title"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_level_1"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#7F4F24"
        android:fontFamily="@font/medievalsharp"
        android:text="1-1"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toStartOf="@+id/button_level_2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_level_2"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="#7F4F24"
        android:fontFamily="@font/medievalsharp"
        android:text="1-2"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toStartOf="@+id/button_level_3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_level_3"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="#7F4F24"
        android:fontFamily="@font/medievalsharp"
        android:text="1-3"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_level_4"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="#7F4F24"
        android:fontFamily="@font/medievalsharp"
        android:text="1-4"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toEndOf="@+id/button_level_3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_level_5"
        android:layout_width="72dp"
        android:layout_height="86dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="172dp"
        android:backgroundTint="#7F4F24"
        android:fontFamily="@font/medievalsharp"
        android:text="1-5"
        android:textColor="#FFFFFF"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toEndOf="@+id/button_level_4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shop_button_home"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/abyss_button_home"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/abyss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/back_button_abyss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintEnd_toStartOf="@+id/textView3" />

    <ImageView
        android:id="@+id/home_button_abyss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="@+id/navbar"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>